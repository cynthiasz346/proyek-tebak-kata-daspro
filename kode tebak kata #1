#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

int main() {
    int pilih;
    char tebakan[100];

    srand(time(NULL));

    char *mudah[] = {"kucing", "pisang", "rumah", "meja"};
    char *sedang[] = {"komputer", "gitaris", "perpustakaan"};
    char *sulit[] = {"astronot", "matematika", "konsentrasi"};

    int jumlahMudah = 4;
    int jumlahSedang = 3;
    int jumlahSulit = 3;


    while (1) {
        printf("\n=== PERMAINAN TEBAK KATA ===\n");
        printf("1. Mulai Permainan\n");
        printf("2. Keluar\n");
        printf("Pilih: ");
        scanf("%d", &pilih);
        getchar();

        system("cls");

 if (pilih == 1) {
            int level;
            printf("Pilih level:\n");
            printf("1. Mudah\n");
            printf("2. Sedang\n");
            printf("3. Sulit\n");
            printf("Level: ");
            scanf("%d", &level);
            getchar();
            system("cls");

            char *kataDipilih;

            if (level == 1) {
                kataDipilih = mudah[rand() % jumlahMudah];
            } else if (level == 2) {
                kataDipilih = sedang[rand() % jumlahSedang];
            } else {
                kataDipilih = sulit[rand() % jumlahSulit];
            }

            printf("Clue: Panjang kata %d huruf\n", strlen(kataDipilih));

            printf("Masukkan tebakan kamu: ");
            fgets(tebakan, 100, stdin);
            tebakan[strcspn(tebakan, "\n")] = 0;

            if (strcmp(tebakan, kataDipilih) == 0) {
                printf("Benar! Kamu berhasil menebak.\n");
            } else {
                printf("Salah! Jawaban yang benar adalah: %s\n", kataDipilih);
            }
        }
        else if (pilih == 2) {
            return 0;
        }
    }

    return 0;
}
