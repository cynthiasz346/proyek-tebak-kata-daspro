#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

int main() {
    int pilih;
    char tebakan[100];
    int skor = 0;

    srand(time(NULL));

    char *mudah[] = {"kucing", "pisang", "rumah", "meja"};
    char *sedang[] = {"komputer", "gitaris", "perpustakaan"};
    char *sulit[] = {"astronot", "matematika", "konsentrasi"};

    int jumlahMudah = 4;
    int jumlahSedang = 3;
    int jumlahSulit = 3;

    while (1) {
        printf("\n=== PERMAINAN TEBAK KATA ===\n");
        printf("1. Mulai Permainan\n");
        printf("2. Keluar\n");
        printf("Pilih: ");
        scanf("%d", &pilih);
        getchar();
        system("cls");

        if (pilih == 1) {
            int level;
            printf("Pilih level:\n");
            printf("1. Mudah\n");
            printf("2. Sedang\n");
            printf("3. Sulit\n");
            printf("Level: ");
            scanf("%d", &level);
            getchar();
            system("cls");

            char *kata;
            if (level == 1) kata = mudah[rand() % jumlahMudah];
            else if (level == 2) kata = sedang[rand() % jumlahSedang];
            else kata = sulit[rand() % jumlahSulit];

            int kesempatan = 3;
            int menang = 0;

            printf("Clue 1: Panjang kata %d huruf\n", strlen(kata));
            printf("Clue 2: Huruf pertama: %c\n", kata[0]);
            printf("Clue 3: Huruf terakhir: %c\n\n", kata[strlen(kata)-1]);

            while (kesempatan > 0) {
                printf("Kesempatan: %d\n", kesempatan);
                printf("Tebakan: ");
                fgets(tebakan, 100, stdin);
                tebakan[strcspn(tebakan, "\n")] = 0;

                if (strcmp(tebakan, kata) == 0) {
                    printf("Benar! Kamu berhasil menebak kata.\n");
                    if (kesempatan == 3) skor += 10;
                    else skor += 5;
                    menang = 1;
                    break;
                } else {
                    printf("Salah!\n");
                    kesempatan--;
                }
            }

            if (!menang) {
                printf("Kamu kehabisan kesempatan.\n");
                printf("Jawaban yang benar: %s\n", kata);
            }

            printf("Skor kamu sekarang: %d\n", skor);
        }
        else if (pilih == 2) {
            return 0;
        }
    }

    return 0;
}
