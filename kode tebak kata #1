#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    int pilih;
    char tebakan[100];
    char kata[] = "kucing";

    while (1) {
        printf("\n=== PERMAINAN TEBAK KATA ===\n");
        printf("1. Mulai Permainan\n");
        printf("2. Keluar\n");
        printf("Pilih: ");
        scanf("%d", &pilih);
        getchar();

        system("cls");

        if (pilih == 1) {
            printf("Tebak kata (contoh hewan): ");
            fgets(tebakan, 100, stdin);
            tebakan[strcspn(tebakan, "\n")] = 0;

            if (strcmp(tebakan, kata) == 0) {
                printf("Benar! Kamu berhasil menebak.\n");
            } else {
                printf("Salah! Kata yang benar adalah: %s\n", kata);
            }
        }
        else if (pilih == 2) {
            return 0;
        }
    }

    return 0;
}
